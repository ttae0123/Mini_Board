{{>layouts/header}}
{{#article}}
<h1 class="mb-3 display-4">{{title}}</h1>
<div class="mb-4 text-muted small">
    작성자: {{author}} | ID: {{id}}
        | 작성일: {{createdAt}}
</div>
<div class="card shadow-sm mb-5">
    <div class="card-body">
        <p class="card-text fs-5" style="white-space: pre-wrap;">{{content}}</p>
    </div>
</div>
<div class="d-flex flex-column flex-md-row justify-content-end">
    <a href="/articles/{{id}}/edit" class="btn btn-primary flex-grow-1 flex-md-grow-0 me-md-2 mb-2 mb-md-0">
        수정
    </a>
    <a href="/articles/{{id}}/delete" class="btn btn-danger flex-grow-1 flex-md-grow-0 me-md-2 mb-2 mb-md-0">
        삭제
    </a>
    <a href="/articles" class="btn btn-secondary flex-grow-1 flex-md-grow-0">
        목록으로 돌아가기
    </a>
</div>
{{/article}}
{{>layouts/footer}}